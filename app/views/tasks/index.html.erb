<% if logged_in? %>
  <h1> <%= current_user.name %>さんのタスク一覧</h1>
    <% if @tasks.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>タスク</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task|  %>
            <tr>
              <td><%= link_to task.id , task %></td>
              <td><%= task.content %></td>
              <td><%= task.status %></td>
            </tr>
          <% end  %>
        </tbody>
      </table>
    <% end %>
    
    <%= link_to '新規タスク登録', new_task_path, class: "btn btn-primary" %>
<% else %>
  <div class="center">
    <div class="text-center">
      <h1>タスク管理ページ</h1>
      <h2>登録かログインをしてください</h2>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login!', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>


